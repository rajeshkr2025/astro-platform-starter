---
import Layout from '../layouts/Layout.astro';
import PortfolioCards from './dashboard/_components/PortfolioCards';
import ClientList from './dashboard/_components/ClientList';
import AssetAllocationChart from './dashboard/_components/AssetAllocation';
import ActivityFeed from './dashboard/_components/ActivityFeed';
import TopPerformers from './dashboard/_components/TopPerformers';
import {
  clients,
  assetAllocation,
  recentTransactions,
  getTotalAUM,
  getAverageReturn,
  getTopPerformers
} from '../data/wealth-data';

const totalAUM = getTotalAUM();
const averageReturn = getAverageReturn();
const topPerformers = getTopPerformers(3);
const totalClients = clients.length;
const newAssets = 1250000; // New assets in last 30 days
---

<Layout title="Wealth Management Dashboard">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <div class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Wealth Management Dashboard</h1>
            <p class="mt-1 text-sm text-gray-500">
              Welcome back! Here's an overview of your client portfolios.
            </p>
          </div>
          <div class="text-right">
            <p class="text-sm text-gray-500">Today's Date</p>
            <p class="text-lg font-semibold text-gray-900">
              {new Date().toLocaleDateString('en-US', {
                month: 'long',
                day: 'numeric',
                year: 'numeric'
              })}
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Summary Cards -->
      <div class="mb-8">
        <PortfolioCards
          client:load
          totalAUM={totalAUM}
          totalClients={totalClients}
          averageReturn={averageReturn}
          newAssets={newAssets}
        />
      </div>

      <!-- Two Column Layout -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
        <!-- Asset Allocation - Takes 2 columns -->
        <div class="lg:col-span-2">
          <AssetAllocationChart client:load allocations={assetAllocation} />
        </div>

        <!-- Top Performers - Takes 1 column -->
        <div class="lg:col-span-1">
          <TopPerformers client:load clients={topPerformers} />
        </div>
      </div>

      <!-- Activity Feed -->
      <div class="mb-8">
        <ActivityFeed client:load transactions={recentTransactions} />
      </div>

      <!-- Client List -->
      <div>
        <ClientList client:load clients={clients} />
      </div>
    </div>
  </div>
</Layout>
