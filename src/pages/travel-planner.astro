---
import Layout from '../layouts/Layout.astro';
import TravelPlannerApp from './_components/TravelPlannerApp';
---

<Layout title="Daily Travel Planner">
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-purple-50 py-8 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
          Daily Travel Planner
        </h1>
        <p class="text-lg text-gray-600">
          Organize your trips and plan your daily adventures
        </p>
      </div>

      <TravelPlannerApp client:load />
    </div>
  </main>
</Layout>
